@layout.online.app({ title: "Checkout" })
    @slot('meta')
        <meta name="description" content="A welcome page made with EdgeJS">
    @endslot
    
    <main class="mt-5" x-data="cart({
        firstname: '{{user.firstname}}',
        lastname: '{{user.lastname}}',
        email: '{{user.email}}',
        number: '{{user.number || '09XX-XXX-XXXX'}}',
        address: '{{user.address || ''}}'
    })">
        <template x-if="isProcessing">
            <div class="loading__state">
                <div class="spinner-grow" style="width: 5rem; height: 5rem;" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </template>
        <div class="row">
            <div class="col-12 col-lg-6">
                <h5>Billing Details</h5>
                <form id="form">
                    <div class="row">
                        <div class="col col-lg-6">
                            <div class="mb-2">
                                <label>First name*</label>
                                <input type="text" class="form-control" x-model="orderDetails.firstName"/>
                                <div class="text-danger" x-show="formFieldError.firstName">First Name cannot be empty.</div>
                            </div>
                        </div>
                        <div class="col col-lg-6">
                            <div class="mb-2">
                                <label>Last name*</label>
                                <input type="text" class="form-control" x-model="orderDetails.lastName"/>
                                <div class="text-danger" x-show="formFieldError.lastName">Last Name cannot be empty.</div>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-2">
                            <label>Street address*</label>
                            <input type="text" class="form-control" placeholder="House number and street name" x-model="orderDetails.address"/>
                            <div class="text-danger" x-show="formFieldError.address">Address cannot be empty.</div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-2">
                            <label>Town / City*</label>
                            <select class="form-select" x-model="orderDetails.city">
                                <option hidden selected>Select City</option>
                                <template x-for="city in cities">
                                    <option :value="city.city" x-text="city.city"></option>
                                </template>
                            </select>
                            <div class="text-danger" x-show="formFieldError.city">City cannot be empty.</div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-2">
                            <label>Phone*</label>
                            <input type="number" class="form-control" placeholder="09XX-XXX-XXXX" x-model="orderDetails.phone"/>
                            <div class="text-danger" x-show="formFieldError.phone">Contact number cannot be empty.</div>
                            <div class="text-danger" x-show="formFieldError.phoneLenght">Invalid Contact number.</div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-2">
                            <label>Email address*</label>
                            <input type="text" class="form-control" x-model="orderDetails.email"/>
                            <div class="text-danger" x-show="formFieldError.email">Email cannot be empty.</div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-2">
                            <label>Oder notes (options)*</label>
                            <textarea type="text" class="form-control" rows="5" x-model="orderDetails.notes"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-12 col-lg-6 mt-1">

                <h5>Your Order</h5>

                <ul class="list-group mb-5" style="background-color: aliceblue!impotant;">
                    <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                        <h6 class="text-muted mb-0">Product</h6>
                        <h6 class="text-muted mb-0">Subtotal</h6>
                    </li>
                    <template x-for="cart in carts">
                        <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                            <div>
                                <div class="d-flex align-items-center">
                                    <img :src="cart.image" width="70" :alt="cart.name" />
                                    <h6 class="text-muted" x-text="cart.name"></h6>
                                </div>
                                <p class="mb-0">Color: <spa x-text="cart.color"></spa> | Internal Storage: <spa x-text="cart.storage"></spa></p>
                            </div>
                            <h6 class="fw-bolder">â‚±<span x-text="(disCountedPrice(cart.price, cart.sale) * cart.qty).toLocaleString()"></span></h6>
                        </li>
                    </template>
                </ul>

                <h5>Payment Method:</h5>
                @let(paymentOptions = [{value: 'cod', label: 'COD', ref: ''},{value: 'gcash', label: 'Gcash', ref: '(09123456789)'},{value: 'paymaya', label: 'PayMaya', ref: '(09123456781)'}])
                <ul class="list-group mb-2" style="background-color: aliceblue!impotant;">
                    <template x-for="options in {{JSON.stringify(paymentOptions)}}">
                        <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" :value="options.value"  x-model="orderDetails.paymentMethod">
                                <label class="form-check-label">
                                    <span x-text="options.label"></span>
                                    <span x-text="options.ref"></span>
                                </label>
                              </div>
                        </li>
                    </template>
                    <div class="text-danger" x-show="formFieldError.paymentMethod">Payment Method cannot be empty.</div>
                </ul>
                <div class="col">
                    <div class="mb-2">
                        <label>Refereance*</label>
                        <input type="text" class="form-control" x-model="orderDetails.reference"/>
                    </div>
                    <div class="text-danger" x-show="formFieldError.reference">Reference cannot be empty.</div>
                </div>
                <div class="col">
                    <div class="mb-2">
                        <label>Downpayment* <template x-if="requireDownPayment !== 0"><p>Downpayment Should be (<span x-text="requireDownPayment"></span>)</p></template></label>
                        <input type="number" class="form-control" x-model="orderDetails.downpayment" placeholder="1000 or 5000"/>
                        <div class="text-danger" x-show="formFieldError.downpayment">Downpayment cannot be empty.</div>
                        <div class="text-danger" x-show="formFieldError.requireDownpayment">Downpayment should be more tha half of total price.</div>
                    </div>
                    <div class="text-danger" x-show="formFieldError.downpayment">Reference cannot be empty.</div>
                </div>
                <button @click.prevent="checkout" class="btn btn-danger mt-3 w-100">PLACED ORDER</button>
   
            </div>
        </div>
    </main>


@end
