<div class="mb-3">
    <label for="{{name}}">{{label || ''}}</label>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" value="{{ value }}" id="{{name}}" name="{{name}}" {{ checked === 'checked' ? 'checked' : '' }}>
        <label class="form-check-label" for="flexCheckDefault">
          {{check_label}}
        </label>
    </div>
</div>