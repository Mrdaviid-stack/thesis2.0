
<div class="mb-3">
    <label for="{{ name }}" class="form-label">{{ label || '' }}</label>
    <input
        id="{{ name }}"
        name="{{ name }}" 
        type="{{ type || 'text' }}" 
        class="form-control {{ size || '' }} shadow-none"
        placeholder="{{ placeholder || '' }}"
        x-model="form.{{name}}"
    >
    <div class="text-danger" x-text="errors.{{name}}"></div>
</div>
